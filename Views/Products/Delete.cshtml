@model GerenciamentoDePedidos.Application.DTOs.ProductDto
@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash-fill me-2"></i> Excluir Produto</h4>
            </div>
            <div class="card-body text-center">
                <p class="fs-5">Tem certeza que deseja excluir <strong>@Model.Name</strong>?</p>

                <form asp-action="DeleteConfirmed" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Excluir
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg"></i> Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
